<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.switchsort">
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat">

        <!-- This is your MAIN activity - it's the entry point -->
        <activity
            android:name=".frontend.activities.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Your game activity -->
        <activity
            android:name=".frontend.activities.GameActive"
            android:theme="@style/Theme.SwitchSort"
            android:exported="false" />
        <activity
            android:name=".frontend.activities.LeaderboardActivity"
            android:exported="false" />

    </application>
</manifest>